/* Visit https://aka.ms/tsconfig to read more about this file */
{
  "compilerOptions": {
    "jsx": "preserve", // Remove if you don't use JSX
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
  ]
}